import java.util.Scanner;
public class main {
    public static void Main(String[] args) {
        Scanner scan = new Scanner(System.in);
        int genero;
        int escolhaRaca;
        String raca = "";
        int escolhaClasse;
        String classe = ""; 

        printLento("Bem vindo à Sereia Caolha!\n",10);
        printLento("Conheça minha taverna, apesar da bagunça e dos gritos, pode ser um lugar bem acolhedor.\nMe chamo Marley, e mesmo com a minha altura, tenho um grande Figado(Ele é um anão).\n\n",25);
        printLento("Apresente-se por favor!\n\n",10);

        while (true) {
            printLento("Qual genero?\n" +
                    "[1]Masculino\n" +
                    "[2]Feminino\n" +
                    "[3]Helicopter", 20);
            System.out.println(" ");
            if (!scan.hasNextInt()) {
                System.out.println("Entrada inválida. Tente novamente.\n");
                scan.next(); // descarta a entrada inválidae
                continue;
            }
            genero = scan.nextInt();

            switch (genero) {
                case 1:
                    printLento("Então você é macho.\n", 10);
                    break;
                case 2:
                    printLento("Seja bem vinda, bela dama.\n", 10);
                    break;
                case 3:
                    printLento("HELICOPTER HELICOPTER PARACOPTER PARACOPTER!\n", 15);
                    break;
                default:
                    printLento("Escolha uma opção válida.\n", 10);
                    continue;
            }
            break;
        }

        while (true) {
            printLento("Qual raça você pertence?\n" +
                    "[1]Humano\n" +
                    "[2]Orc\n" +
                    "[3]Elfo\n" +
                    "[4]Anão\n",20);
            System.out.println(" ");

            if (!scan.hasNextInt()) {
                printLento("Entrada inválida. Tente novamente.\n", 10);
                scan.next(); // descarta a entrada inválidae
                continue;
            }
            escolhaRaca = scan.nextInt();

            switch (escolhaRaca) {
                case 1:
                    printLento("Faz anos que não vejo um de vocês.\n", 10);
                    raca = "Humano";
                    break;
                case 2:
                    printLento("Temos um dos grandes aqui.\n", 10);
                    raca = "Orc";
                    break;
                case 3:
                    printLento("Espero que minha espelunca não o(a) incomode.\n",10);
                    raca = "Elfo";
                    break;
                case 4:
                    printLento("Ah! Você é um dos meus.\n",10);
                    raca = "Anão";
                    break;
                default:
                    printLento("Escolha uma opção válida.\n", 10);
                    continue;
            }
            break;
        }

        while (true) {
            printLento("Qual sua especialidade?\n" +
                    "[1]Guerreiro\n" +
                    "[2]Ladino\n" +
                    "[3]Mago\n" +
                    "[4]Arqueiro\n", 30);

            System.out.println(" ");
            if (!scan.hasNextInt()) {
                System.out.println("Entrada inválida. Tente novamente.\n");
                scan.next(); // descarta a entrada inválidae
                continue;
            }
            escolhaClasse = scan.nextInt();
           

            switch (escolhaClasse) {
                case 1:
                    printLento("Contaremos com você.\n", 10);
                    classe = "Guerreiro";
                    break;
                case 2:
                    printLento("Fique longe da minha carteira.\n", 10);
                    classe = "Ladino";
                    break;
                case 3:
                    printLento("FIRE BALL!\n", 10);
                    classe = "Mago";
                    break;
                    case 4:
                    printLento("Só não erre a mira\n", 10);
                    break;
                default:
                    printLento("Escolha uma opção válida.\n", 10);
                    continue;
            }
            break;
        }
        personagem p = new personagem(raca, classe);
        p.exibirVida();
    }

    
    

    public static void printLento(String texto, long delayMillis) {
        for (char c : texto.toCharArray()) {
            System.out.print(c);
            System.out.flush(); // força a impressão imediata
            try {
                Thread.sleep(delayMillis);
            } catch (InterruptedException e) {
                Thread.currentThread().interrupt();
            }
        }
    
    }
}
