import java.util.Scanner;
public class Main {

    public static void main(String args[]) {
        Scanner scan = new Scanner(System.in);
        int genero;
        int raca;


        printLento("Bem vindo ao Dungeons & Java!\n",20);
        printLento("O RPG de texto que irá te levar para outra realidade direto de sua IDE.\n",25);
        printLento("Me mostre como você é!\n",20);

        while (true) {
            printLento("Qual genero?\n" +
                    "[1]Masculino\n" +
                    "[2]Feminino\n" +
                    "[3]Helicopter", 20);
            System.out.println(" ");
            if (!scan.hasNextInt()) {
                System.out.println("Entrada inválida. Tente novamente.\n");
                scan.next(); // descarta a entrada inválidae
                continue;
            }
            genero = scan.nextInt();

            switch (genero) {
                case 1:
                    System.out.println("Então você é macho.\n");
                    break;
                case 2:
                    System.out.println("Seja bem vinda, bela dama.\n");
                    break;
                case 3:
                    System.out.println("HELICOPTER HELICOPTER PARACOPTER PARACOPTER!\n");
                    break;
                default:
                    System.out.println("Escolha uma opção válida.\n");
                    continue;
            }
            break;
        }

        while (true) {
            printLento("Qual raça você pertence?\n" +
                    "[1]Humano\n" +
                    "[2]Orc\n" +
                    "[3]Elfo\n" +
                    "[4]Anão\n",20);
            System.out.println(" ");

            if (!scan.hasNextInt()) {
                System.out.println("Entrada inválida. Tente novamente.\n");
                scan.next(); // descarta a entrada inválidae
                continue;
            }
            raca = scan.nextInt();

            switch (raca) {
                case 1:
                    System.out.println("Faz anos que não vejo um de vocês.\n");
                    break;
                case 2:
                    System.out.println("Temos um dos grandes aqui.\n");
                    break;
                case 3:
                    System.out.println("Espero que minha espelunca não o incomode.\n");
                    break;
                case 4:
                    System.out.println("Vocês são os meus melhores clientes.\n");
                default:
                    System.out.println("Escolha uma opção válida.\n");
                    continue;
            }
            break;
        }
    }

    public static void printLento(String texto, long delayMillis) {
        for (char c : texto.toCharArray()) {
            System.out.print(c);
            try {
                Thread.sleep(delayMillis);
            } catch (InterruptedException e) {
                Thread.currentThread().interrupt();
            }
        }
    }
}
