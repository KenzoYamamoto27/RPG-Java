public class Personagem {
    private String nome;
    private String raca;
    private String classe;
    private int vida;
    private int forca;
    private int mana;
    private int inteligencia;
    private int destreza;

    public Personagem(String nome, String raca, String classe){
        this.nome = nome;
        this.raca = raca;
        this.classe = classe;
        this.vida = 0;
        this.forca = 0;
        this.mana = 0;
        this.inteligencia = 0;
        this.destreza = 0;
        
    }

    private void statusPorRaca(String raca){
        switch (raca) {
            case "Humano":
                vida += 110;
                forca += 60;
                mana += 30;
                inteligencia += 60;
                destreza += 60;
                break;
            case "Orc":
                vida += 140;
                forca += 80;
                mana += 10;
                inteligencia += 45;
                destreza += 40;
                break;
            case "Elfo":
                vida += 100;
                forca += 50;
                mana += 45;
                inteligencia += 60;
                destreza += 70;
                break;
            case "Anão":
                vida += 130;
                forca += 70;
                mana += 20;
                inteligencia += 60;
                destreza += 45;
                break;
            default:
                break;
        }
    }

    private void statusPorClasse(String classe){
        switch (classe) {
            case "Guerreiro":
                vida += 30;
                forca += 25;
                mana += 0;
                inteligencia += 5;
                destreza -= 10;
                break;
            case "Ladino":
                vida += 10;
                forca += 25;
                mana += 0;
                inteligencia += 10;
                destreza += 30;
                break;
            case "Mago":
                vida -= 10;
                forca += 0;
                mana += 40;
                inteligencia += 20;
                destreza += 10;
                break;
            case "Arqueiro":
                vida += 15;
                forca += 15;
                mana += 10;
                inteligencia += 15;
                destreza += 20;
                break;
            default:
                break;
        }
    }

    public void aplicarBonus() {
        statusPorRaca(raca);
        statusPorClasse(classe);
    }

    public String getNome() {
        return nome;
    }
    public String getRaca() {
        return raca;
    }
    public String getClasse() {
        return classe;
    }
    public int getVida() {
        return vida;
    }
    public int getForca() {
        return forca;
    }
    public int getMana() {
        return mana;
    }
    public int getDestreza() {
        return destreza;
    }
    public int getInteligencia() {
        return inteligencia;
    }


    public void setNome(String nome) {
        this.nome = nome;
    }
    public void setRaca(String raca) {
        this.raca = raca;
    }
    public void setClasse(String classe) {
        this.classe = classe;
    }
    public void setVida(int vida) {
        this.vida = vida;
    }
    public void setForca(int forca) {
        this.forca = forca;
    }
    public void setMana(int mana) {
        this.mana = mana;
    }
    public void setDestreza(int destreza) {
        this.destreza = destreza;
    }
    public void setInteligencia(int inteligencia) {
        this.inteligencia = inteligencia;
    }

    public void exibirStatus() {
    
        Main.printLento("\nEntão, "+ nome + ", as suas informações são: \n", 15);
        System.out.println("===== FICHA DO PERSONAGEM =====");
        Main.printLento("\nRaça: " + raca + "\nClasse: " + classe +
                "\n\nVida: " + vida + "\nForça: " + forca + "\nMana: " + mana + "\nInteligência: " + inteligencia + "\nDestreza: " + destreza, 20);
                System.out.println(" \n");
        System.out.println("==============================");
    }
}
