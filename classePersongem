public class personagem {
    private String nome;
    private String raca;
    private String classe;
    private int vida;
    private int forca;
    private int mana;
    private int destreza;

    public personagem(String nome, String raca, String classe){
        this.nome = nome;
        this.raca = raca;
        this.classe = classe;
        this.vida = 100;
        this.forca = 50;
        this.mana = 0;
        this.destreza = 50;
    }

    private void statusPorRaca(String raca){
        switch (raca) {
            case "Humano":
                vida += 10;
                forca += 10;
                mana += 10;
                destreza += 10;
                break;
            case "Orc":
                vida += 40;
                forca += 25;
                mana += 0;
                destreza -= 15;
                break;
            case "Elfo":
                vida += 0;
                forca += 0;
                mana += 40;
                destreza += 20;
                break;
            case "An√£o":
                vida += 30;
                forca += 20;
                mana += 10;
                destreza -= 15;
                break;
            default:
                break;
        }
    }

    private void statusPorClasse(String classe){
        switch (classe) {
            case "Guerreiro":
                vida += 30;
                forca += 25;
                mana += 0;
                destreza -= 10;
                break;
            case "Ladino":
                vida += 10;
                forca += 25;
                mana += 0;
                destreza += 30;
                break;
            case "Mago":
                vida -= 10;
                forca += 0;
                mana += 40;
                destreza += 10;
                break;
            case "Arqueiro":
                vida += 15;
                forca += 15;
                mana += 10;
                destreza += 20;
                break;
            default:
                break;
        }
    }

    public void aplicarBonus() {
        statusPorRaca(raca);
        statusPorClasse(classe);
    }

    public String getNome() {
        return nome;
    }
    public String getRaca() {
        return raca;
    }
    public String getClasse() {
        return classe;
    }
    public int getVida() {
        return vida;
    }
    public int getForca() {
        return forca;
    }
    public int getMana() {
        return mana;
    }


    public void setNome(String nome) {
        this.nome = nome;
    }
    public void setRaca(String raca) {
        this.raca = raca;
    }
    public void setClasse(String classe) {
        this.classe = classe;
    }
    public void setVida(int vida) {
        this.vida = vida;
    }
    public void setForca(int forca) {
        this.forca = forca;
    }
    public void setMana(int mana) {
        this.mana = mana;
    }

    public void exibirStatus() {
        Main.printLento("\nEnt√£o, "+ nome + ", as suas informa√ß√µes s√£o: ", 15);
        Main.printLento("Ra√ßa: " + raca + "\nEspecialidade: " + classe +
                "\n‚ù§Vida: " + vida + " | üí™For√ßa: " + forca + " | üî∑Mana: " + mana + " | ü§∏‚Äç‚ôÇÔ∏èqDestreza: " + destreza, 20);
    }
}
